<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

    <application
        android:name=".OnTVApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@null"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.OnTv.Default"
        android:usesCleartextTraffic="true"
        tools:replace="networkSecurityConfig"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.OnTv.Default"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|density|screenSize|smallestScreenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".FatalErrorActivity"
            android:exported="false"
            android:launchMode="singleInstancePerTask"
            android:noHistory="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OnTv.Default"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|density|screenSize|smallestScreenSize"
            />
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:launchMode="singleInstancePerTask"
            android:noHistory="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OnTv.Default"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|density|screenSize|smallestScreenSize"
            />
        <activity
            android:name=".TvActivity"
            android:exported="true"
            android:launchMode="singleInstancePerTask"
            android:noHistory="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OnTv.Default"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|density|screenSize|smallestScreenSize"
            />
        <activity
            android:name=".MovieActivity"
            android:exported="true"
            android:launchMode="singleInstancePerTask"
            android:noHistory="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OnTv.Default"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|density|screenSize|smallestScreenSize"
            />
    </application>
</manifest>