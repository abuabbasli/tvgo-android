<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dialogs_shadow_background"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="938dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <com.mc2soft.ontv.common.ui.MyBackgroundView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:mybg_color="?attr/theme_dialog_bg_color"
            app:mybg_image="?attr/theme_dialog_bg_image"
            app:mybg_corner_radius="?attr/theme_dialog_bg_corner_radius"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_height="266.67dp"
            android:layout_width="200dp"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearance="@style/MoviePosterCornerCut"
            />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_height="122dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintStart_toStartOf="@+id/image"
            app:layout_constraintEnd_toEndOf="@+id/image"
            android:layout_marginBottom="-61dp"
            >
            <ImageView
                android:id="@+id/lockButton"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/movie_details_lock"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:focusable="true"
                android:background="@drawable/series_button_bg"
                />
            <ImageView
                android:id="@+id/playButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/movie_details_play"
                android:focusable="true"
                android:background="@drawable/series_button_bg"
                android:scaleType="centerInside"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                />
            <ImageView
                android:id="@+id/favButton"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/movie_details_fav"
                android:scaleType="centerInside"
                android:focusable="true"
                android:background="@drawable/series_button_bg"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintLeft_toRightOf="@id/image"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-16dp"
            android:textSize="42sp"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Tilte Name"
            />
        <LinearLayout
            android:id="@+id/bubble_frame"
            android:layout_height="44dp"
            android:layout_width="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@id/image"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="2dp"
            android:background="?attr/theme_series_details_bubble"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            >
            <ImageView
                android:id="@+id/yearIcon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/series_year"
                app:tint="?attr/colorOnPrimary"
                />
            <TextView
                android:id="@+id/year"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginLeft="8dp"
                tools:text="2025"
                />
            <ImageView
                android:id="@+id/ratingIcon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/series_awards"
                app:tint="?attr/colorOnPrimary"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/rating"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginLeft="2dp"
                tools:text="8.7"
                />
            <ImageView
                android:id="@+id/limitIcon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/series_age_limit"
                app:tint="?attr/colorOnPrimary"
                android:layout_marginLeft="14dp"
                />
            <TextView
                android:id="@+id/limit"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginLeft="8dp"
                tools:text="18+"
                />
            <ImageView
                android:id="@+id/durationIcon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/series_duration"
                app:tint="?attr/colorOnPrimary"
                android:layout_marginLeft="13dp"
                />
            <TextView
                android:id="@+id/duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginLeft="8dp"
                tools:text="120min"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/about"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bubble_frame"
            app:layout_constraintLeft_toRightOf="@id/image"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:maxLines="5"
            tools:text="1\n2\n3\n4"
            />
        <FrameLayout
            android:id="@+id/htroot"
            android:layout_height="122dp"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="@+id/buttons"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            />
        <TextView
            android:id="@+id/description"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/htroot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:maxLines="9"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:scrollbars="vertical"
            tools:text="description description description description description description "
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>