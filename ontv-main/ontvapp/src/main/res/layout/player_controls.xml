<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/player_control_shadow"
    >
    <com.mc2soft.ontv.ontvapp.player.ui.PlayerSeekLineView
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnBackground"
                android:textSize="18sp"
                tools:text="000:0000"
                android:layout_gravity="center_vertical"
                />
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/live"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_live"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/prev"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_prev"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/backward"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_backward"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/playPause"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_play"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/forward"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_forward"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                />
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/next"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_next"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="45dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            >
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/lock"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_lock"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/parental"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_parental"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <com.mc2soft.ontv.ontvapp.player.ui.PlayerControlButton
                android:id="@+id/audioSelect"
                android:layout_width="@dimen/player_button_size"
                android:layout_height="@dimen/player_button_size"
                app:player_control_icon="@drawable/player_audio"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
