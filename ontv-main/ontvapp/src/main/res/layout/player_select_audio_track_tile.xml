<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_select_audio_track_tile_height"
    android:background="@drawable/player_select_audio_track_tile_bg"
    android:duplicateParentState="true">
    <ImageView
        android:id="@+id/radioImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:duplicateParentState="true"
        android:src="@drawable/radio_button"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:duplicateParentState="true"
        android:textColor="@color/radio_button_text"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"
        tools:text="track name" />
</LinearLayout>
