<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/hotbar_tile_width"
    android:layout_height="@dimen/hotbar_tile_height"
    android:orientation="vertical"
    android:duplicateParentState="true"
    android:background="?attr/theme_hotbar_tile_bg"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:duplicateParentState="true"
        android:layout_marginTop="10dp"
        app:shapeAppearance="@style/PlayerImageCornerCut"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="?attr/theme_hotbar_tile_text"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
        tools:text="xxxxx"
        android:duplicateParentState="true"
        />
</LinearLayout>
