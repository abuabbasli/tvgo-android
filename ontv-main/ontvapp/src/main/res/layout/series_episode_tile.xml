<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.FrameLayout"
    android:padding="6dp"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/episode_tile_height"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:background="@drawable/series_episode_tile_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/series_episode_tile_text"
            tools:text="Episode 1"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            />
        <LinearLayout
            android:id="@+id/progressFrame"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/episode_progress_frame"
            >
            <View
                android:id="@+id/progress"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:background="@drawable/episode_progress_line"
                />
        </LinearLayout>
    </LinearLayout>
</merge>