<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogs_shadow_background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <com.mc2soft.ontv.common.ui.MyBackgroundView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:mybg_color="?attr/theme_dialog_bg_color"
            app:mybg_image="?attr/theme_dialog_bg_image"
            app:mybg_corner_radius="?attr/theme_dialog_bg_corner_radius"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                />
            <LinearLayout
                android:id="@+id/pins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >
                <View
                    android:id="@+id/pin1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/pin_code_dialog_pin"
                    />
                <View
                    android:id="@+id/pin2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/pin_code_dialog_pin"
                    />
                <View
                    android:id="@+id/pin3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/pin_code_dialog_pin"
                    />
                <View
                    android:id="@+id/pin4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/pin_code_dialog_pin"
                    />
            </LinearLayout>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                >
                <TextView
                    android:id="@+id/btn1"
                    style="@style/PinCodeDialogButtonText"
                    android:text="1"
                    />
                <TextView
                    android:id="@+id/btn2"
                    style="@style/PinCodeDialogButtonText"
                    android:text="2"
                    />
                <TextView
                    android:id="@+id/btn3"
                    style="@style/PinCodeDialogButtonText"
                    android:text="3"
                    />
                <TextView
                    android:id="@+id/btn4"
                    style="@style/PinCodeDialogButtonText"
                    android:text="4"
                    />
                <TextView
                    android:id="@+id/btn5"
                    style="@style/PinCodeDialogButtonText"
                    android:text="5"
                    />
                <TextView
                    android:id="@+id/btn6"
                    style="@style/PinCodeDialogButtonText"
                    android:text="6"
                    />
                <TextView
                    android:id="@+id/btn7"
                    style="@style/PinCodeDialogButtonText"
                    android:text="7"
                    />
                <TextView
                    android:id="@+id/btn8"
                    style="@style/PinCodeDialogButtonText"
                    android:text="8"
                    />
                <TextView
                    android:id="@+id/btn9"
                    style="@style/PinCodeDialogButtonText"
                    android:text="9"
                    />
                <ImageView
                    android:id="@+id/btnBack"
                    style="@style/PinCodeDialogButtonBase"
                    android:src="@drawable/pin_code_dialog_back_button"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/btn0"
                    style="@style/PinCodeDialogButtonText"
                    android:text="0"
                    />
                <ImageView
                    android:id="@+id/btnOk"
                    style="@style/PinCodeDialogButtonBase"
                    android:src="@drawable/pin_code_dialog_ok_button"
                    android:scaleType="centerInside"
                    />
            </GridLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
